{
    "name": "firstgen-docs",
    "components": {
        "proxy": {
            "image": "$proxy_image",
            "ports": 80,
            "links": [
                {
                    "component": "content",
                    "target_port": 80,
                    "alias": "docsmaster"
                },
                {
                    "component": "sitesearch",
                    "target_port": 9200
                }
            ],
            "domains": {
                "80": "$domain_name"
            }
        },
        "content": {
            "image": "$content_image",
            "ports": 80,
            "env": {
                "BASE_URL": "https://$domain_name"
            },
            "links": [
                {
                    "component": "sitesearch",
                    "target_port": 9200
                }
            ]
        },
        "sitesearch": {
            "image": "$sitesearch_image",
            "ports": 9200,
            "volumes": [
                {
                    "path": "/data",
                    "size": "2 GB"
                }
            ]
        }
    }
}
