{
  "settings" : {
    "analysis" : {
      "filter": {
        "replace_period_with_space": {
          "type": "mapping",
          "preserve_original": 1,
          "mappings": [".=> "]
        }
      },
      "analyzer": {
        "custom_text_analyzer": {
          "type": "custom",
          "char_filter": ["replace_period_with_space"],
          "tokenizer": "standard",
          "filter": ["lowercase"]
        }
      }
    }
  }
}